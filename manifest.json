{
  "manifest_version": 2,
  "name": "Add How Long To Beat to Infinite Backlog",
  "version": "1.0",
  "description": "Obtains the duration of a game from How Long To Beat and adds it to the game page on Infinite Backlog.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://infinitebacklog.net/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "interceptor.js"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}